@model IEnumerable<AppExamen.Entidades.MarcaFarmaceutica>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: #007bff;">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive" style="background-color: #f0e8d0; padding: 10px;">
    <table class="table table-bordered" style="background-color: #ffebcd;">
        <thead style="background-color: #f8f9fa; color: #212529;">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>País de Origen</th>
                <th>Año de Fundación</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                var alternateColor = false;
            }
            @foreach (var item in Model)
            {
                <tr style="background-color: @(alternateColor ? "#ffffff" : "#f2f2f2");">
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.PaisOrigen)</td>
                    <td>@Html.DisplayFor(modelItem => item.AñoFundacion)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">Details</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                alternateColor = !alternateColor;
            }
        </tbody>
    </table>
</div>
